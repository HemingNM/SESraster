citHeader("Please cite both the package and the original article describing the methods in your publications:")

year <- sub("-.*", "", meta$Date)
year <- ifelse(length(as.numeric(year))==0, sub("-.*", "", Sys.Date()), year)
note <- sprintf("R package version %s", meta$Version)

bibentry(
  bibtype = "Misc",
  title   = "{SESraster}: Raster Randomization for Null Hypothesis Testing",
  author = c(person("Neander Marcel", "Heming"), person("FlÃ¡vio M. M.", "Mota"), person("Gabriela", "Alves-Ferreira")),
  year   = year,
  note   = note,
  url    = "https://CRAN.R-project.org/package=SESraster, https://github.com/HemingNM/SESraster"
)

